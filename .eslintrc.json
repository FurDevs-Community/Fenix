{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["google", "plugin:prettier/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "prettier/prettier": ["error", { "endOfLine": "auto" }],
        "require-jsdoc": "off", // TODO: Enable it back
        "valid-jsdoc": "off", // TODO: Enable it back
        "semi": "error"
    }
}
